{
  "name": "restaurant_automation_api",
  "version": "1.0.0",
  "description": "api for restaurant automation system",
  "main": "index.js",
  "author": "aswin aryal",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint src/. --ext ts",
    "lint:fix": "eslint src/. --ext ts --fix",
    "start": "yarn build && node dist/index.js",
    "start:docker": "docker-compose -f docker-compose.yml up --build"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.13",
    "eslint": "^8.8.0",
    "eslint-config-airbnb-typescript-prettier": "^5.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "express": "^4.17.2"
  },
  "nodemonConfig": {
    "watch": [
      "src/index.ts"
    ],
    "ext": "ts",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "execMap": {
      "ts": "node --require ts-node/register"
    }
  }
}
